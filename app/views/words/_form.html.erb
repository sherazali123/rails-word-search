
<!-- form start -->
<%= form_for @word do |f| %>
  <div class="box-body">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => 'form-control' %>
      <%= @word.errors[:title].first unless @word.errors[:title].blank? %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, :class => 'form-control', cols: 20, rows: 10 %>
      <%= @word.errors[:description].first unless @word.errors[:description].blank? %>
    </div>
    <div class="form-group">
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
      <p class="help-block">Upload only image file.</p>
    </div>
    <div class="radio">
      <label>
        <%= f.radio_button :active, true %>
        <%= label :active, 'Active' %> &nbsp;&nbsp;&nbsp;
        <%= f.radio_button :active, false %>
        <%= label :active, 'In-active' %>
      </label>
    </div>
  </div><!-- /.box-body -->

  <div class="box-footer">
    <%= f.submit :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
