<!-- Content Header (Page header) -->
<section class="content-header">

<div class="row">
  <div class="col-xs-12">
        <%= form_tag("/words", method: "get", class: "") do %>
                        <div class="input-group input-group-sm">
                               <%= text_field_tag(:q, @q,class: "form-control") %>
                               <span class="input-group-btn">
                                <%= submit_tag("Search", class: "btn btn-info btn-flat") %>
                               </span>
                          </div>
        <% end %>
  </div>
</div>

  <h1>
    Words
    <small><%= link_to 'Add', new_word_path %></small>
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <!-- <h3 class="box-title">Hover Data Table</h3> -->
        </div><!-- /.box-header -->
        <div class="box-body">
          <table id="example2" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Volume</th>
                <th>Active</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @words.each do |word| %>
                <tr>
                  <td><%= word.title %></td>
                  <td><%= word.description.truncate(50) %></td>
                  <td>
                    <% if !word.volumes.blank? %>
                        <%= word.volumes.title %>
                    <% end %>
                  </td>
                  <th>
                    <% if word.active? %>
                      Yes
                    <% else %>
                      No
                    <% end %>
                  </th>
                  <td>
                    <span><%= link_to 'view', word_path(word.id) %><span>
                    <span> | </span>
                    <span><%= link_to 'edit', edit_word_path(word.id) %><span>
                    <!-- <span> | </span>
                    <span><%= link_to 'delete', word_path(word.id), method: "DELETE", data: {confirm: 'Delete this data ? '} %><span> -->
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.box-body -->
      </div><!-- /.box -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</section><!-- /.content -->
